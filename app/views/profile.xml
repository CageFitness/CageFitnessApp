<Alloy>
    <View id="mainView">
        <Require src="topbar"></Require>

        <View class="profile_picture">
			<ImageView id="pimage" class="pic"></ImageView>
			<Label id="user_complete_name">John Doe</Label>
			<Label id="user_username">Username</Label>
        </View>

        <View class="workout_list">
            <ListView id="wlist" onItemclick="handleListViewClick">
                <!-- Enable Pull-to-Refresh -->
                <!-- <RefreshControl id="refresh" onRefreshstart="fetchData" platform="ios" /> -->
                <!-- Add custom item templates -->
                <Templates>
                    <ItemTemplate name="MyCustomTemplate">
                        <Label bindId="title" class="titleLabel" />
                        <Label bindId="detail" class="detailLabel" />
                    </ItemTemplate>
                </Templates>

                <ListSection>
			        <HeaderView>
			            <View class="list_header">
			            	<Label class="htitle">My Workouts</Label>
			            </View>
			        </HeaderView>                	
                    <ListItem title="Workout" accessoryType="Ti.UI.LIST_ACCESSORY_TYPE_CHECKMARK" />
                    <ListItem title="Detail Accessory" accessoryType="Ti.UI.LIST_ACCESSORY_TYPE_DISCLOSURE" />
                    <ListItem title="Disclosure Accessory" accessoryType="Ti.UI.LIST_ACCESSORY_TYPE_DISCLOSURE" />
                    <ListItem title="Checkmark Accessory" accessoryType="Ti.UI.LIST_ACCESSORY_TYPE_CHECKMARK" />
                </ListSection>
            </ListView>
        </View>
    </View>
</Alloy>

