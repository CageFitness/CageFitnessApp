<Alloy>
    <View id="vid" class="video_container">
        <View class="verticals">
            <View id="video_wrapper">
                <View id="video_player">
                    <!-- <Label>[VIDEO_PLACEHOLDER]</Label> -->
                    
                    <View id="full_video_wrapper">
                    	<!-- [VIDEO.INSERTED.HERE] -->
                    </View>
                    <!-- <ImageView id="video_player_thumb"></ImageView> -->
                </View>
            </View>
            <View id="controls_wrapper">
                <View id="controls">
                    <View class="control_element">
                        <!-- <Label>[COUNTER]</Label> -->
                        <Module id="progressbar" module="br.com.arlsoft.progressbar" method="createCircularView" />
                    </View>
                    <View class="control_element">
						<View id="coming_wrap">
	                        <Label id="up_next_title">Coming Up Next...</Label>
	                        <Label id="coming_up_next"></Label>							
						</View>
                    </View>
                    <View id="prev_wrap" class="control_element">
                        <ImageView id="preview_thumb"></ImageView>
                    </View>
                </View>
            </View>
        </View>
        <View class="titles">
            <Label id="title"></Label>
            <Label id="subtitle"></Label>
            <Label id="counter"></Label>
        </View>
    </View>
</Alloy>

