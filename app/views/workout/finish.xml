        </View>
        <Label class="small_text" id="subtitle"></Label>
        <Label class="small_text" id="counter_big"></Label>
		<ListView id="elementsList" defaultItemTemplate="elementTemplate">
        <Templates>
            <ItemTemplate name="elementTemplate">
                <Label bindId="symbol" id="symbol" />
                <View id="atomProperties">
                    <Label bindId="name" id="name" />
                    <View id="secondLine">
                        <Label class="line2 fieldLabel" text="Index: " />
                        <Label class="line2" bindId="number" id="number" />
                        <Label class="line2 fieldLabel" text="ID: " />
                        <Label class="line2" bindId="mass" id="mass" />
                        <Label class="line2 fieldLabel" text="Duration: " />
                        <Label class="line2" bindId="slide_data" id="slide_data" />                        
                    </View>
                </View>
                <ImageView bindId="image" id="image" />
            </ItemTemplate>
        </Templates>
