<Alloy>
    <View id="mainView" class="container">

        <Require top="0" src="topbar"></Require>

        <ScrollableView top="0" id="scrollableView" showPagingControl="false">
            <View id="home" class="step">
                <!-- <Button id="home_btn" onClick="stepClick"></Button> -->
                <Button id="home_btn" onClick="doProgress"></Button>
                <View class="custom_workout_wrap" onClick="stepClick">
                	<Label id="home_sub">Create your own</Label>
                	<Label id="home_title">CUSTOM WORKOUT</Label>
                </View>
                <!-- <Button id="home_btn" onClick="doWorkout"></Button> -->
            </View>

            <View id="step2" class="step">
                <Require type="view" src="header" customTitle="Number of Rounds" customImage="images/layout/workout_theme.png" />
                <View class="list_wrapper">
                    <View id="list2" class="list" top="0">
                        <View top="20" id="button_matrix">
                            <Button _type="btn" id="btn1" left="16"   class="big_btn row1" title="1"></Button>
                            <Button _type="btn" id="btn2" left="116"  class="big_btn row1" title="2"></Button>
                            <Button _type="btn" id="btn3" left="216"  class="big_btn row1" title="3"></Button>
                            <Button _type="btn" id="btn4" left="316"  class="big_btn row1" title="4"></Button>
                            <Button _type="btn" id="btn5" left="416"  class="big_btn row1" title="5"></Button>
                            <Button _type="btn" id="btn6" left="16"   class="big_btn row2" title="6"></Button>
                            <Button _type="btn" id="btn7" left="116"  class="big_btn row2" title="7"></Button>
                            <Button _type="btn" id="btn8" left="216"  class="big_btn row2" title="8"></Button>
                            <Button _type="btn" id="btn9" left="316"  class="big_btn row2" title="9"></Button>
                            <Button _type="btn" id="btn10" left="416" class="big_btn row2" title="10"></Button>
                        </View>
                        <Label text="Rounds" class="winTitle"></Label>
                        <Label top="24" text="SELECT NUMBER OF ROUNDS PER WORKOUT" class="winTitle center" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"></Label>
                    </View>
                </View>
            </View>
            <View id="step3" class="step">
                <Require type="view" src="header" customTitle="Choose Round Type" customImage="images/layout/round_type.png" />
                <View class="list_wrapper">
                    <View id="list3" class="list" top="0">
                        <ListView id="listview_step3" defaultItemTemplate="roundType" top="80">
                            
                            <Templates>
                                <ItemTemplate name="roundType">
                                    <View class="padder">
                                        <View class="list_item_bg">
                                            <Label bindId="info" id="title" height="Ti.UI.SIZE" />
                                            <View class="btn_item_wrapper" height="Ti.UI.SIZE">
                                                <Button width="140" height="Ti.UI.SIZE" class="dropdown_btn" bindId="selector" id="select" onClick="handleClickPopOver"></Button>
                                            </View>
                                        </View>
                                    </View>
                                </ItemTemplate>
                            </Templates>
                            
                            <ListSection height="Ti.UI.SIZE">
								<!-- <ListItem height="60" info:text="Round 1"></ListItem>-->
                            </ListSection>
                        </ListView>
                        <Label text="5 Rounds" class="winTitle"></Label>
                        <Label top="24" text="ASSIGN A WORKOUT TYPE TO EACH ROUND" class="winTitle center" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"></Label>
                    </View>
                </View>
                <View id="blinder_3" class="blinder"></View>
                <Button id="step3_btn" class="step_btn" onClick="stepClick" title="NEXT"></Button>
            </View>
            <View id="step4" class="step">
                <Require type="view" src="header" customTitle="Number of Exercises" customImage="images/layout/number_exercises.png" />
                <View class="list_wrapper">
                    <View id="list4" class="list" top="0">
                        <ListView id="listview_step4" defaultItemTemplate="numberOfExercises">
                            <Templates>
                                <ItemTemplate name="numberOfExercises">
                                    <View class="padder">
                                        <View class="list_item_bg">
                                            <Label bindId="info" id="title" height="Ti.UI.SIZE" />
                                            <View id="btngroup" bindId="theparent" right="0" layout="horizontal" class="btn_item_wrapper" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
                                                <Button backgroundColor="#ffffff" onClick="ToggleMe" width="60" right="0" title="5" height="Ti.UI.SIZE" class="dropdown_btn"   selectorValue="5" bindId="select5" autoStyle="true"></Button>
                                                <View class="btngroupSep" height="Ti.UI.SIZE" width="8"></View>                                            	
                                                <Button backgroundColor="#ffffff" onClick="ToggleMe" width="60" right="0" title="7" height="Ti.UI.SIZE" class="dropdown_btn"   selectorValue="7" bindId="select7" autoStyle="true"></Button>
                                                <View class="btngroupSep" height="Ti.UI.SIZE" width="8"></View>
                                                <Button backgroundColor="#ffffff" width="60" right="10" onClick="ToggleMe" title="10" height="Ti.UI.SIZE" class="dropdown_btn" selectorValue="10" bindId="select10" autoStyle="true"></Button>
                                            </View>
                                        </View>
                                    </View>
                                </ItemTemplate>
                            </Templates>
                            <ListSection height="Ti.UI.SIZE" top="80">
								<!-- <ListItem info:text="Round 1"></ListItem> -->
                            </ListSection>
                        </ListView>
                        <Label text="DESCRIPTION" class="winTitle xleft" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT"></Label>
                        <Label text="NUMBER OF EXERCISES" class="winTitle xright" textAlign="Ti.UI.TEXT_ALIGNMENT_RIGHT"></Label>
                    </View>
                </View>
                <View id="blinder_4" class="blinder"></View>
                <Button id="step4_btn" class="step_btn" onClick="stepClick" title="NEXT"></Button>
            </View>
            <View id="step5" class="step">
                <Require type="view" src="header" customTitle="Equipment" customImage="images/layout/equipment.png" />
                <View class="list_wrapper">
                    <View id="list5" class="list" top="0">
                        <ListView id="listview_step5" defaultItemTemplate="template_equipment">
                            <Templates>
                                <ItemTemplate name="template_equipment">
                                    <View class="listitem_wrapper">
                                        <ImageView bindId="pic" id="icon" />
                                        <Label left="60" bindId="info" id="title" />
                                        <!-- <ImageView class="check" bindId="accesory" id="check"></ImageView> -->
                                    </View>
                                </ItemTemplate>
                            </Templates>
                            <ListSection>
                                <ListItem height="84" info:text="Body Weight" pic:image="images/icons/01.png" class="checked"></ListItem>
                                <ListItem height="84" info:text="Cage Fitness Bags" pic:image="images/icons/02.png" class="checked"></ListItem>
                                <ListItem height="84" info:text="Bands" pic:image="images/icons/03.png" class="checked"></ListItem>
                                <ListItem height="84" info:text="Medicine Balls" pic:image="images/icons/04.png" class="checked"></ListItem>
                            </ListSection>
                        </ListView>
                    </View>
                        <Label text="Select Equipment" class="winTitle"></Label>
                        <!-- <Label top="24" text="ASSIGN A WORKOUT TYPE TO EACH ROUND" class="winTitle center" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"></Label> -->

                </View>
            </View>
            <View id="step6" class="step">
                <Require type="view" src="header" customTitle="Build Workout" customImage="images/layout/build_workout.png" />
                <View class="list_wrapper">
                    <View id="list6" class="list" top="0">
                        <ListView id="listview_step6" onItemClick="handleClickBuildWorkout">
                            <ListSection>
                                <ListItem height="70" class="checked" title="Auto-Generate (Workout is created for you)"></ListItem>
                                <ListItem height="70" class="checked" title="Customize (Create your own class)"></ListItem>
                            </ListSection>
                        </ListView>
                    </View>
                </View>
            </View>
            <View id="step7" class="step">
                <Require type="view" src="header" customTitle="Review" customImage="images/layout/review.png" />
                <View class="list_wrapper">
                    <View id="list7" class="list" top="0">
                        <ListView id="listview_step7" defaultItemTemplate="template_begin_workout" onItemClick="handleClickBeginWorkout">
                            <Templates>
                                <ItemTemplate name="template_begin_workout">
                                    <View class="listitem_wrapper">
                                        <Label left="10" top="10" bindId="info" id="title" layout="vertical" />
                                        <Label class="sub" left="10" top="30" text="" color="#7e7e7e" bindId="sub"></Label>
                                        <ImageView height="20" width="20" class="check" bindId="accesory" id="check" image="images/check.png"></ImageView>
                                    </View>
                                </ItemTemplate>
                            </Templates>
                            <ListSection>
                                <!-- <ListItem height="60" info:text="Workout Theme" sub:text="Strength and Toning"></ListItem> -->
                                <ListItem height="60" info:text="Number of Rounds" sub:text="5 Rounds"></ListItem>
                                <ListItem height="60" info:text="Round Types" sub:text="Warm Up, Upper Body, Lower Body, Combo, Core / Cool-Down"></ListItem>
                                <ListItem height="60" info:text="Number of Exercises" sub:text="Round 1: 7, Round 2: 7, Round 3: 10, Round 4: 10, Round 5: 10"></ListItem>
                                <ListItem height="60" info:text="Equipment" sub:text="Medicine Ball"></ListItem>
                            </ListSection>
                        </ListView>
                    </View>
                </View>
                <View id="blinder_6" class="blinder"></View>
                <Button id="step7_btn" class="step_btn" onClick="doWorkout" title="BEGIN WORKOUT"></Button>
            </View>
        </ScrollableView>

		<View top="-565" id="step_line" class="bar">
			<View class="step_wrap">
	            <View class="step_track_line"></View>
	            <View id="step_track">
	                <View id="s2" left="0" onClick="stepClickHandler" autoStyle="true" class="step_ball">
	                    <Label class="step_label" text="1" autoStyle="true"></Label>
	                </View>
	                <View id="s3" left="79" onClick="stepClickHandler" autoStyle="true" class="step_ball">
	                    <Label class="step_label" autoStyle="true" text="2"></Label>
	                </View>
	                <View id="s4" left="182" onClick="stepClickHandler" autoStyle="true" class="step_ball">
	                    <Label class="step_label" text="3" autoStyle="true"></Label>
	                </View>
	                <View id="s5" left="285" onClick="stepClickHandler" autoStyle="true" class="step_ball">
	                    <Label class="step_label" text="4" autoStyle="true"></Label>
	                </View>
	                <View id="s6" left="388" onClick="stepClickHandler" autoStyle="true" class="step_ball">
	                    <Label class="step_label" text="5" autoStyle="true"></Label>
	                </View>
	                <View id="s7" left="490" onClick="stepClickHandler" autoStyle="true" class="step_ball">
	                    <Label class="step_label" text="6" autoStyle="true"></Label>
	                </View>
	            </View>				
			</View>
        </View>

    </View>
            
</Alloy>

