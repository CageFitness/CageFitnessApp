<Alloy>
    <Window id="login">
    	<Require src="topbar" window_type="modal"></Require>
        <ScrollView class="container">
            <View id="login_panel">
                <View id="logo">
                	<View id="activity_wrapper">
                		<ActivityIndicator id="activity_indicator" />
                	</View>
                </View>
                <Label id="login_title">LOG IN</Label>
				<View id="messages">
	                <Label id="message">Login with your account.</Label>
	                <Label id="link" onClick="forgotPassword">Forgot Password?</Label>						
				</View>
                <View id="field_bg"></View>
                <TextField id="username" value="" />
                <TextField id="password" value="" />
                <Button id="loginButton" onClick="cageAuthenticate">
                	<ImageView id="limage"></ImageView>
                </Button>
            </View>
        </ScrollView>
    </Window>
</Alloy>