<Alloy>
    <View id="mainView" class="container">
        <Require src="topbar" window_type="modal"></Require>
        <!-- <View id="logo">
            <View id="activity_wrapper">
                <ActivityIndicator id="activity_indicator" />
            </View>
        </View> -->
        <ScrollableView id="scrollable" onScrollend="scrollableViewDidScroll">
        </ScrollableView>
        <View id="toolbar_wrapper">
            <View class="tool">
                <Button id="prev" title="Back" onClick="scrollPrev">
                    <ImageView class="icon" id="prev_icon"></ImageView>
                </Button>
                <Button id="play" title="Play / Pause" onClick="PlayPause">
                    <ImageView class="icon" id="play_icon"></ImageView>
                </Button>
                <Button id="next" title="Next" onClick="scrollNext">
                    <ImageView class="icon" id="next_icon"></ImageView>
                </Button>
            </View>
            <Button id="restart" title="Restart" onClick="scrollToView">
                <ImageView class="icon" id="restart_icon"></ImageView>
            </Button>
        </View>
    </View>
</Alloy>

