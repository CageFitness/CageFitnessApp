<Alloy>
    <View id="mainView" class="page_wrapper">
        <Require src="topbar"></Require>
        <View class="help_list">
            <ListView id="help_list_view" onItemclick="handleListViewClick">
                <!-- Enable Pull-to-Refresh -->
                <!-- <RefreshControl id="refresh" onRefreshstart="fetchData" platform="ios" /> -->
                <!-- Add custom item templates -->
                <Templates>
                    <ItemTemplate name="MyCustomTemplate">
                        <Label bindId="title" class="titleLabel" />
                        <Label bindId="detail" class="detailLabel" />
                    </ItemTemplate>
                </Templates>
                <ListSection>
			        <HeaderView>
			            <View class="list_header">
			            	<Label class="htitle">LOVE CAGE FITNESS? HELP US GROW</Label>
			            </View>
			        </HeaderView>
                    <ListItem title="Find us on Facebook" class="list_view_item" />
                    <ListItem title="Find us on Youtube" class="list_view_item" />
                    <ListItem title="Find us on Twitter" class="list_view_item" />
                </ListSection>
                <ListSection>
			        <HeaderView>
			            <View class="list_header">
			            	<Label class="htitle">GET IN CONTACT WITH US?</Label>
			            </View>
			        </HeaderView>                 	
                    <ListItem title="Frequently Asked Questions" class="list_view_item" />
                    <ListItem title="Contact US" class="list_view_item" />
                </ListSection>
                <ListSection>
			        <HeaderView>
			            <View class="list_header">
			            	<Label class="htitle">WANT TO READ THE FINE PRINT?</Label>
			            </View>
			        </HeaderView>                  	
                    <ListItem id="menu_external" title="Terms of Service" class="list_view_item" />
                    <ListItem id="menu_external" title="Privacy Policy" class="list_view_item" />
                </ListSection>
            </ListView>
        </View>
    </View>
</Alloy>

